{
	"name": "cpp-explorer",
	"displayName": "Cpp Explorer",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:cppExplorer",
		"onCommand:cpp-explorer.configure"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cpp-explorer.configure",
				"title": "C++ Explorer: Configure"
			},
			{
				"command": "cpp-explorer.createProject",
				"title": "C++ Explorer: Create Project"
			},
			{
				"command": "cpp-explorer.addLicense",
				"title": "C++ Explorer: Add License To Project"
			},



			{
				"command": "cppExplorer.editWorkspaceProperties",
				"title": "Properties",
				"icon": "$(wrench)"
			},
			{
				"command": "cppExplorer.editProjectProperties",
				"title": "Properties",
				"icon": "$(wrench)"
			},
			{
				"command": "cppExplorer.refresh",
				"title": "Refresh",
				"icon": "$(sync)"
			},
			{
				"command": "cppExplorer.addLibrary",
				"title": "Add Library",
				"icon": "$(repo)"
			},
			{
				"command": "cppExplorer.addProject",
				"title": "Add Project",
				"icon": "$(package)"
			},
			{
				"command": "cppExplorer.addClass",
				"title": "Add File/Class",
				"icon": "$(new-file)"
			},
			{
				"command": "cppExplorer.openHpp",
				"title": "Open Header/Interface (.hpp)",
				"icon": "$(split-horizontal)"
			},
			{
				"command": "cppExplorer.openCpp",
				"title": "Open Implementation (.cpp)",
				"icon": "$(book)"
			},
			{
				"command": "cppExplorer.convertToLib",
				"title": "Convert Project To Library",
				"icon": "$(symbol-boolean)"
			},
			{
				"command": "cppExplorer.convertToExe",
				"title": "Convert Project To Executable",
				"icon": "$(symbol-boolean)"
			},
			{
				"command": "cppExplorer.addDependancy",
				"title": "Add Dependancy",
				"icon": "$(repo-push)"
			},
			{
				"command": "cppExplorer.addProjectFolder",
				"title": "Add Folder",
				"icon": "$(file-directory-create)"
			},
			{
				"command": "cppExplorer.deleteBinaries",
				"title": "Delete Binaries",
				"icon": "$(trash)"
			},
			{
				"command": "cppExplorer.deleteProject",
				"title": "Delete Project",
				"icon": "$(trash)"
			},
			{
				"command": "cppExplorer.makeReadOnlyProject",
				"title": "Convert Project ReadOnly (Move to Libraries)",
				"icon": "$(symbol-text)"
			},
			{
				"command": "cppExplorer.makeEditableProject",
				"title": "Make Library Editable (Make it a Project)",
				"icon": "$(whole-word)"
			},
			{
				"command": "cppExplorer.removeCmakeData",
				"title": "Remove All Build Data (CMake must be re-run after this)",
				"icon": "$(circle-slash)"
			},
			{
				"command": "cppExplorer.deleteFile",
				"title": "Delete File",
				"icon": "$(trash)"
			},
			{
				"command": "cppExplorer.addBatchTest",
				"title": "Add Batch Test",
				"icon": "$(expand-all)"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "cppExplorer",
					"name": "C++ Explorer"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "cppExplorer.refresh",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "cppExplorer.addProject",
					"when": "view == cppExplorer && viewItem == workspace",
					"group": "inline"
				},
				{
					"command": "cppExplorer.editWorkspaceProperties",
					"when": "view == cppExplorer && viewItem == workspace"
				},
				{
					"command": "cppExplorer.addProject",
					"when": "view == cppExplorer && viewItem == workspace"
				},

				{
					"command": "cppExplorer.addLibrary",
					"when": "view == cppExplorer && viewItem == libraries",
					"group": "inline"
				},
				{
					"command": "cppExplorer.addLibrary",
					"when": "view == cppExplorer && viewItem == libraries"
				},

				{
					"command": "cppExplorer.addClass",
					"when": "view == cppExplorer && viewItem == library",
					"group": "inline"
				},
				{
					"command": "cppExplorer.addClass",
					"when": "view == cppExplorer && viewItem == executable",
					"group": "inline"
				},

				{
					"command": "cppExplorer.addClass",
					"when": "view == cppExplorer && viewItem == library"
				},
				{
					"command": "cppExplorer.editProjectProperties",
					"when": "view == cppExplorer && viewItem == library"
				},
				{
					"command": "cppExplorer.convertToExe",
					"when": "view == cppExplorer && viewItem == library"
				},
				{
					"command": "cppExplorer.deleteProject",
					"when": "view == cppExplorer && viewItem == library"
				},
				{
					"command": "cppExplorer.makeReadOnlyProject",
					"when": "view == cppExplorer && viewItem == library"
				},
				{
					"command": "cppExplorer.addProjectFolder",
					"when": "view == cppExplorer && viewItem == library"
				},

				{
					"command": "cppExplorer.addClass",
					"when": "view == cppExplorer && viewItem == executable"
				},
				{
					"command": "cppExplorer.editProjectProperties",
					"when": "view == cppExplorer && viewItem == executable"
				},
				{
					"command": "cppExplorer.convertToLib",
					"when": "view == cppExplorer && viewItem == executable"
				},
				{
					"command": "cppExplorer.addProjectFolder",
					"when": "view == cppExplorer && viewItem == executable"
				},
				{
					"command": "cppExplorer.deleteProject",
					"when": "view == cppExplorer && viewItem == executable"
				},

				{
					"command": "cppExplorer.openCpp",
					"when": "view == cppExplorer && viewItem == class",
					"group": "inline"
				},
				{
					"command": "cppExplorer.openHpp",
					"when": "view == cppExplorer && viewItem == class",
					"group": "inline"
				},

				{
					"command": "cppExplorer.addDependancy",
					"when": "view == cppExplorer && viewItem == dependancies",
					"group": "inline"
				},
				{
					"command": "cppExplorer.addDependancy",
					"when": "view == cppExplorer && viewItem == dependancies"
				},
				
				{
					"command": "cppExplorer.deleteBinaries",
					"when": "view == cppExplorer && viewItem == binaries",
					"group": "inline"
				},
				{
					"command": "cppExplorer.removeCmakeData",
					"when": "view == cppExplorer && viewItem == binaries",
					"group": "inline"
				},


				{
					"command": "cppExplorer.deleteFile",
					"when": "view == cppExplorer && viewItem == file",
					"group": "inline"
				},
				{
					"command": "cppExplorer.deleteFile",
					"when": "view == cppExplorer && viewItem == file"
				},

				{
					"command": "cppExplorer.addProjectFolder",
					"when": "view == cppExplorer && viewItem == folder"
				},

				{
					"command": "cppExplorer.addBatchTest",
					"when": "view == cppExplorer && viewItem == tests"
				},
				{
					"command": "cppExplorer.addBatchTest",
					"when": "view == cppExplorer && viewItem == tests",
					"group": "inline"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
