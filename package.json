{
	"name": "cpp-explorer",
	"displayName": "Cpp Explorer",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:cppExplorer",
		"onCommand:cpp-explorer.configure"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "cpp-explorer.configure",
				"title": "C++ Explorer: Configure"
			},
			{
				"command": "cppExplorer.deleteEntry",
				"title": "Delete",
				"icon": "$(trash)"
			},
			{
				"command": "cppExplorer.refresh",
				"title": "Refresh",
				"icon": "$(sync)"
			},
			{
				"command": "cppExplorer.addLibrary",
				"title": "Add Library",
				"icon": "$(repo)"
			},
			{
				"command": "cppExplorer.addProject",
				"title": "Add Project",
				"icon": "$(new-file)"
			},
			{
				"command": "cppExplorer.openHpp",
				"title": ".hpp"
			},
			{
				"command": "cppExplorer.openCpp",
				"title": ".cpp"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "cppExplorer",
					"name": "C++ Explorer"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "cppExplorer.refresh",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "cppExplorer.addProject",
					"when": "view == cppExplorer && viewItem == workspace",
					"group": "inline"
				},
				{
					"command": "cppExplorer.addLibrary",
					"when": "view == cppExplorer && viewItem == libraries",
					"group": "inline"
				},
				{
					"command": "cppExplorer.openHpp",
					"when": "view == cppExplorer && viewItem == class"
				},
				{
					"command": "cppExplorer.openCpp",
					"when": "view == cppExplorer && viewItem == class"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
